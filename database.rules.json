{
  "rules": {
    ".read": false,
    ".write": false,
    
     "admin_logs": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },
    "isAdmin": {
      ".validate": "auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com'"
    },
    
    "guest_carts": {
      ".read": true,
      ".write": true,
      ".indexOn": ["createdAt", "lastUpdated"],
      "$guestId": {
        ".validate": "$guestId.matches(/^guest_/)",
        "cart": {
          ".validate": "newData.hasChildren()"
        },
        "createdAt": {
          ".validate": "newData.isNumber() || newData.val() === 'serverTimeStamp'"
        },
        "lastUpdated": {
          ".validate": "newData.isNumber() || newData.val() === 'serverTimeStamp'"
        }
      }
    },
    
    "users": {
      ".read": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || auth.token.admin === true)",
        ".write": "auth != null && (auth.uid === $userId || auth.token.admin === true || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
        
        "name": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "email": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "phone": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')" 
        },
        "address": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "photo": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "newsletter": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".validate": "newData.isBoolean()"
        },
        "settings": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "orders": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "cart": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        },
        "orderRefs": {
          ".read": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
          ".write": "auth != null && (auth.uid === $userId || auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
        }
      }
    },
    
    "orders": {
      ".read": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      ".indexOn": ["timestamp", "status", "total"],
      
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || auth.token.admin === true)",
        ".write": "auth != null && (auth.uid === $userId || auth.token.admin === true)",
        ".validate": "newData.exists() || root.child('users').child($userId).exists()"
      }
    },
    
    "contacts": {
      ".read": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      ".write": true,
      ".indexOn": ["clientId", "timestamp", "email", "status"],
      
      "$contact": {
        ".validate": "newData.hasChildren(['name', 'email', 'message'])"
      }
    },
    
    "contact-form": {
      ".read": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      ".write": true,
      ".indexOn": ["clientId", "timestamp", "email", "status"]
    },
    
    "products": {
      ".read": true,
      ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      ".indexOn": ["category", "featured", "timestamp", "name", "createdAt", "updatedAt", "displayOrder"]
    },
    
    "usersByEmail": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() === auth.uid || !data.exists())"
    },
    
    "promos": {
      ".read": true,
      ".indexOn": ["code"],
      "$promoId": {
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
        "usageCount": {
          ".write": "auth != null"
        },
        "lastUsed": {
          ".write": "auth != null"
        }
      }
    },
    
    "settings": {
      ".read": true,
      ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')",
      
      "banners": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
      },
      "hero": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
      },
      "about": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
      },
      "footer": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
      },
      "theme": {
        ".read": true,
        ".write": "auth != null && (auth.token.email === 'harnammasale@gmail.com' || auth.token.email === 'admin@harnammasale.com')"
      }
    }
  }
}
