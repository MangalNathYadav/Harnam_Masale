{
  "rules": {
    ".read": false,
    ".write": false,
    
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId",
        
        "name": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId"
        },
        "email": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId"
        },
        "phone": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId" 
        },
        "address": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId"
        },
        "photo": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.isString() && newData.val().matches(/^data:image\\/.*;base64,/)"
        },
        "newsletter": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.isBoolean()"
        },
        
        "cart": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.exists() || root.child('users').child($userId).exists()"
        },
        
        "orderRefs": {
          ".read": "auth != null && auth.uid === $userId",
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.exists() || root.child('users').child($userId).exists()"
        }
      }
    },
    
    "orders": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId",
        ".validate": "newData.exists() || root.child('users').child($userId).exists()"
      }
    },
    
    "contacts": {
      ".read": "auth != null",
      ".write": true,
      ".indexOn": ["clientId", "timestamp", "email"],
      
      "$contact": {
        ".validate": "newData.hasChildren(['name', 'email', 'message'])"
      }
    },
    
    "contact-form": {
      ".read": "auth != null",
      ".write": true,
      ".indexOn": ["clientId", "timestamp", "email"]
    },
    
    "products": {
      ".read": true,
      ".write": "auth != null"
    },
    
    "usersByEmail": {
      ".read": "auth != null",
      ".write": "auth != null && (data.val() === auth.uid || !data.exists())"
    }
  }
}
